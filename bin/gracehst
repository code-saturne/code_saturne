if [ "$1" = "-h" -o "$1" = "-h" -o "$1" = "-h" ] ; then 
echo ' ' 
echo ' gracehst: appel de grace -nxy sur un fichier historique  '
echo '       de Code_Saturne en eliminant la premiere colonne.  '
echo '                                                          '  
echo ' aide: gracehst -h                                         '
echo '                                                          '  
echo ' exemples:                                                '
echo '                                                          '  
echo '   pour un fichier historique VitesseX.hst                '
echo '           gracehst VitesseX.hst                           '
echo '                                                          '  
echo '   pour une serie de fichiers *hst                        '
echo '           for fic in *.hst ; do                          '
echo '             gracehst $fic                                 '
echo '           done                                           '
echo '                                                          '
echo ' ' 
exit
fi

hst=$1
tmp=/tmp/$hst.gracehstmod
if [ -f $tmp ] ; then 
  echo $tmp existe : stop 
  exit
fi

grep -v '#' $hst  | cut -c9-500 > $tmp 
xmgrace -geometry 1100x850 -nxy $tmp 
rm -f $tmp
